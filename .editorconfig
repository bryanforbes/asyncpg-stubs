root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
indent_style = tab
indent_size = 4

[*.py]
indent_style = space
max_line_length = 88

[*.pyi]
indent_style = space
max_line_length = 88

[*.yml]
indent_style = space
indent_size = 2

[*.md]
indent_style = space
indent_size = 2

[*.sh]
indent_style = space

[*.json]
indent_style = space
indent_size = 2
